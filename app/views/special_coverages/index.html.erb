<h2>Special Coverage pages</h2>

<br>
<%= link_to 'New', new_special_coverage_path, class: 'btn btn-primary' %>
<br><br>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Title</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @sc.each do |sc| %>
		<tr>
			<td>
				<%= sc.title %>
			</td>
			<td>
				<%= link_to "Edit", edit_special_coverage_path(sc), class: 'btn' %>
				<%= link_to "Link", sc.to_url, class: 'btn' %>
			</td>
		</tr>

		<% end %>
	</tbody>
</table>