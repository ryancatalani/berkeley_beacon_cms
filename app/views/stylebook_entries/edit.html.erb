<div id="inner_wrap">

<h1>Edit Entry</h1>

<%= form_for @entry do |f| %>
	<% if @entry.errors.any? %>
		<div class="error_messages">
			<h2>Oops, there were a few problems:</h2>
			<ul>
				<% for message in @entry.errors.full_messages %>
					<li><%= message %></li>
				<% end %>
			</ul>
		</div>
	<% end %>
	
	<%= render 'entry_form', :f => f %>

<% end %>

</div>