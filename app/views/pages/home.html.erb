<div id="main">

	<section id="top">		
		
		<section id="left">
			
			<div id="main-story">
				<% if @main_story.first_photo.nil? %>
					<div class="story-text">
						<h2><%= link_to @main_story.title, @main_story.to_url %></h2>
						<div class="byline">By <%= bylineify_short @main_story.people %></div>
					</div>
					<div class="main-story-img-wrap">
						<div class="excerpt"><%= @main_story.excerpt %></div>
					</div>			
				<% else %>
					<div class="main-story-img-wrap">
						<%= link_to image_tag(@main_story.first_photo.media.thumb_460.url), @main_story.to_url %>					
					</div>
					<div class="story-text">
						<h2><%= link_to @main_story.title, @main_story.to_url %></h2>
						<div class="byline">By <%= bylineify_short @main_story.people %></div>
						<div class="excerpt"><%= @main_story.excerpt %></div>
					</div>
				<% end %>
				<div class="clear"></div>
			</div>
		
			<section id="featured-stories">
				<% @featured_stories.each_with_index do |story,i| %>
					<div class="featured-story num-<%= i+1 %>">
						<!-- media -->
						<% unless story.mediafiles.empty? %>
							<div class="featured-story-img-wrap">
							<%= link_to image_tag(story.mediafiles.first.media.thumb_220.url), story.to_url %>
							</div>
						<% end %>
						<h3><%= link_to story.title, story.to_url %></h3>
						<div class="byline">By <%= bylineify_short story.people %></div>
						<div class="excerpt"><%= story.excerpt %></div>
					</div>
				<% end %>
				<div class="clear"></div>
			</section>
			
		</section>

		<section id="center">
			<% @middle_stories.each do |story| %>
				<div class="story">
					<%= image_tag story.first_photo.media.thumb_140.url if story.first_photo %>
					<div class="section_title"><%= story.section.name %></div>
					<h3><%= link_to story.title, story.to_url %></h3>
					<div class="excerpt"><%= story.excerpt %></div>
					<div class="clear"></div>
				</div>
			<% end %>
		</section>
		
		<section id="right">

				<%= link_to "Send Us a Tip", tips_path, :id => "tip_btn" %>
				
				<div class="separator"></div>

				<div class="fb-like" data-href="http://facebook.com/berkeleybeacon" data-send="false" data-width="218" data-show-faces="true"></div>

				<div class="separator"></div>

				<h3><a href="http://berkeleybeacon.tumblr.com">The Beacon on Tumblr</a></h3>
				<em>Latest Entry:</em> <%= link_to @tumblr_latest_title.html_safe, @tumblr_latest_url %>

				<div class="separator"></div>

				<a href="https://twitter.com/BeaconUpdate" class="twitter-follow-button" data-show-count="false" data-size="large">Follow @BeaconUpdate</a>
				<script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

				<ol id="latest_tweets">
					<% @tweets.each do |tweet| %>
						<li>
							<a href="http://twitter.com/BeaconUpdate/status/<%= tweet.attrs["id_str"] %>">
								<div class="time_ago"><%= distance_of_time_in_words_to_now tweet.created_at %> ago</div>
								<%= tweet.text %>
							</a>
						</li>
					<% end %>
				</ol>

			</section>
		
		<div class="clear"></div>
		
	</section>

	<div class="clear"></div>	
	<div class="separator"></div>
	
	<section id="bottom">
		<div class="group-a">
			<div class="section-box" id="news-section-box">
				<h4>News</h4>
				<!-- media -->
				<div class="mediawrap"><%= link_to image_tag(@news.first.mediafiles.first.media.thumb_220.url), @news.first.to_url unless @news.first.mediafiles.empty? %></div>
				<h5><%= link_to @news.first.title, @news.first.to_url %></h5>
				<%= @news.first.excerpt %>
				<ul>
					<% @news.last(2).each do |story| %>
						<li><%= link_to story.title, story.to_url %></li>
					<% end %>
				</ul>
				<div class="clear"></div>
			</div>
			<div class="separator"></div>
			<div class="section-box" id="ae-section-box">
				<h4>Arts</h4>
				<!-- media from first -->
				<div class="mediawrap"><%= link_to image_tag(@ae.first.mediafiles.first.media.thumb_220.url), @ae.first.to_url unless @ae.first.mediafiles.empty? %></div>
				<h5><%= link_to @ae.first.title, @ae.first.to_url %></h5>
				<%= @ae.first.excerpt %>
				<ul>
					<% @ae.last(2).each do |story| %>
						<li><%= link_to story.title, story.to_url %></li>
					<% end %>
				</ul>
			</div>
		</div>
			
		<div class="group-b">
			<div class="section-box" id="opinion-section-box">
				<h4>Opinion</h4>
				<% @opinion.each do |story| %>
					<h5><%= link_to story.title, story.to_url %></h5>
					<%= story.excerpt %>
				<% end %>
			</div>
			<div class="separator"></div>
			<div class="section-box" id="lifestyle-section-box">
				<h4>Lifestyle</h4>
				<!-- media from first -->
				<div class="mediawrap"><%= link_to image_tag(@lifestyle.first.mediafiles.first.media.thumb_220.url), @lifestyle.first.to_url unless @lifestyle.first.mediafiles.empty? %></div>
				<h5><%= link_to @lifestyle.first.title, @lifestyle.first.to_url %></h5>
				<%= @lifestyle.first.excerpt %>
				<ul>
					<% @lifestyle.last(2).each do |story| %>
						<li><%= link_to story.title, story.to_url %></li>
					<% end %>
				</ul>
			</div>
		</div>

		<div class="group-c">
			<section id="popular">
				<h4>Popular on the Beacon</h4>
				<ol>
					<% @popular.each do |story| %>
						<div class="popular-story">
							<!-- media -->
							<li>
								<%= link_to image_tag(story.mediafiles.first.media.thumb_40.url), story.to_url unless story.mediafiles.empty? %>
								<%= link_to story.title, story.to_url %>
								<div class="clear"></div>
							</li>
						</div>
					<% end %>
				</ol>
			</section>
			<div class="section-box" id="sports-section-box">
				<h4>Sports</h4>
				<!-- media from first -->
				<div class="mediawrap"><%= link_to image_tag(@sports.first.mediafiles.first.media.thumb_220.url), @sports.first.to_url unless @sports.first.mediafiles.empty? %></div>
				<h5><%= link_to @sports.first.title, @sports.first.to_url %></h5>
				<%= @sports.first.excerpt %>
				<ul>
					<% @sports.last(2).each do |story| %>
						<li><%= link_to story.title, story.to_url %></li>
					<% end %>
				</ul>				
			</div>
		</div>
		
		
	</section>
	<div class="clear"></div>
</div>

