<div id="main">

	<section id="top">		
		
		<section id="left">
			
			<div id="main-story">
				<% if @main_story.first_photo.nil? %>
					<div class="story-text">
						<h2><%= link_to @main_story.title, @main_story.to_url %></h2>
						<div class="byline">By <%= bylineify_short @main_story.people %></div>
					</div>
					<div class="excerpt"><%= @main_story.excerpt %></div>	
				<% else %>
					<div class="main-story-img-wrap">
						<%= link_to image_tag(@main_story.first_photo.media.thumb_460.url), @main_story.to_url %>					
					</div>
					<div class="story-text">
						<h2><%= link_to @main_story.title, @main_story.to_url %></h2>
						<div class="byline">By <%= bylineify_short @main_story.people %></div>
						<div class="excerpt"><%= @main_story.excerpt %></div>
					</div>
				<% end %>
				<div class="clear"></div>
			</div>
		
			<section id="featured-stories">
				<% @featured_stories.each_with_index do |story,i| %>
					<div class="featured-story num-<%= i+1 %>">
						<!-- media -->
						<% unless story.mediafiles.empty? %>
							<div class="featured-story-img-wrap">
							<%= link_to image_tag(story.first_photo.media.thumb_220.url), story.to_url %>
							</div>
						<% end %>
						<h3><%= link_to story.title, story.to_url %></h3>
						<div class="byline">By <%= bylineify_short story.people %></div>
						<div class="excerpt"><%= story.excerpt %></div>
						<div class="clear"></div>
					</div>
				<% end %>
				<div class="clear"></div>
			</section>
			
		</section>

		<section id="center">
			<% @middle_stories.each do |story| %>
				<div class="story">
					<%= image_tag story.first_photo.media.thumb_140.url if story.first_photo %>
					<div class="section_title"><%= story.section.name %></div>
					<h3><%= link_to story.title, story.to_url %></h3>
					<div class="excerpt"><%= story.excerpt %></div>
					<div class="clear"></div>
				</div>
			<% end %>
		</section>
		
		<section id="right">

				<%= link_to "Send Us a Tip", tips_path, :id => "tip_btn" %>

				<div class="separator"></div>

				<h3>Latest Videos</h3>
				<div id="latest_video_thumbs">
					<% @latest_multimedia.each_with_index do |mediafile,index| %>
						<a href="#" class="latest_video_thumb" data-video="<%= index %>">
						<%= image_tag mediafile.media.thumb_140.url %>
						<div class="video_thumb_label"><%= mediafile.latest_article.section.name rescue "Video" %></div>
						</a>
					<% end %>
				</div>
				<div class="clear"></div>
				<div id="latest_videos_separator">
					<div id="latest_video_position">&nbsp;</div>
				</div>
				
				<div id="latest_videos_container">
					<div id="latest_videos_inner">
						<% @latest_multimedia.each_with_index do |mediafile,index| %>
							<div class="latest_video" id="" data-video="<%= index %>">
								<%= render 'shared/video_tag', :video => mediafile, :preload => false %>
								<strong><%= mediafile.title %></strong> &raquo; <%= link_to "Read the story", mediafile.latest_article.to_url %>
							</div>
						<% end %>
					</div>
				</div>
				<div class="separator"></div>
				<%= link_to image_tag("political_poll.jpg", :width => "100%"), political_poll_path %>

				<div class="separator"></div>

				<h3>From the blogs</h3>
				<h4><a href="http://berkeleybeacon.tumblr.com">The Beacon on Tumblr</a></h4>
				<div class="l_quo_border">Latest Entry: <%= link_to @tumblr_latest_title.html_safe, @tumblr_latest_url %></div>
				<% @blogs.each do |blog| %>
					<% unless blog.articles.empty? %>
						<h4><%= link_to blog.title, blog.to_url %></h4>
						<div class="l_quo_border">Latest Entry: <%= link_to blog.articles.last.title, blog.articles.last.to_url %></div>
					<% end %>
				<% end %>
				<div class="separator"></div>
				<a href="https://twitter.com/BeaconUpdate" class="sm_btn" id="twitter_btn">
					<%= image_tag "twitter_icon.png" %> @BeaconUpdate
				</a>
				<a href="https://facebook.com/BerkeleyBeacon" class="sm_btn" id="fb_btn">
					<%= image_tag "fb_icon.png" %> BerkeleyBeacon
				</a>
				<div class="clear"></div>
				<h4>On Facebook</h4>
				<div class="l_quo_border">
					<div class="fb-like" data-href="http://facebook.com/berkeleybeacon" data-send="false" data-width="218" data-show-faces="true"></div>
				</div>
				<h4>On Twitter</h4>
				<ol id="latest_tweets" class="l_quo_border">
					<% @tweets.each do |tweet| %>
						<li>
							<a href="http://twitter.com/BeaconUpdate/status/<%= tweet.attrs["id_str"] %>">
								<em><%= distance_of_time_in_words_to_now tweet.created_at %> ago</em>
								<%= tweet.text %>
							</a>
						</li>
					<% end %>
				</ol>

			</section>
		
		<div class="clear"></div>
		
	</section>

	<div class="clear"></div>	
	<div class="separator"></div>
	
	<section id="bottom">
		<div class="group-a">
			<div class="section-box" id="news-section-box">
				<h4>News</h4>
				<!-- media -->
				<div class="mediawrap"><%= link_to image_tag(@news.first.first_photo.media.thumb_220.url), @news.first.to_url unless @news.first.mediafiles.empty? %></div>
				<h5><%= link_to @news.first.title, @news.first.to_url %></h5>
				<%= @news.first.excerpt %>
				<ul>
					<% @news.last(2).each do |story| %>
						<li><%= link_to story.title, story.to_url %></li>
					<% end %>
				</ul>
				<div class="clear"></div>
			</div>
			<div class="separator"></div>
			<div class="section-box" id="ae-section-box">
				<h4>Arts</h4>
				<!-- media from first -->
				<div class="mediawrap"><%= link_to image_tag(@ae.first.first_photo.media.thumb_220.url), @ae.first.to_url unless @ae.first.mediafiles.empty? %></div>
				<h5><%= link_to @ae.first.title, @ae.first.to_url %></h5>
				<%= @ae.first.excerpt %>
				<ul>
					<% @ae.last(2).each do |story| %>
						<li><%= link_to story.title, story.to_url %></li>
					<% end %>
				</ul>
			</div>
		</div>
			
		<div class="group-b">
			<div class="section-box" id="opinion-section-box">
				<h4>Opinion</h4>
				<% @opinion.each do |story| %>
					<h5><%= link_to story.title, story.to_url %></h5>
					<%= story.excerpt %>
				<% end %>
			</div>
			<div class="separator"></div>
			<div class="section-box" id="lifestyle-section-box">
				<h4>Lifestyle</h4>
				<!-- media from first -->
				<div class="mediawrap"><%= link_to image_tag(@lifestyle.first.first_photo.media.thumb_220.url), @lifestyle.first.to_url unless @lifestyle.first.mediafiles.empty? %></div>
				<h5><%= link_to @lifestyle.first.title, @lifestyle.first.to_url %></h5>
				<%= @lifestyle.first.excerpt %>
				<ul>
					<% @lifestyle.last(2).each do |story| %>
						<li><%= link_to story.title, story.to_url %></li>
					<% end %>
				</ul>
			</div>
		</div>

		<div class="group-c">
			<section id="popular">
				<%= render 'shared/popular' %>
			</section>
			<div class="section-box" id="sports-section-box">
				<h4>Sports</h4>
				<!-- media from first -->
				<div class="mediawrap"><%= link_to image_tag(@sports.first.first_photo.media.thumb_220.url), @sports.first.to_url unless @sports.first.mediafiles.empty? %></div>
				<h5><%= link_to @sports.first.title, @sports.first.to_url %></h5>
				<%= @sports.first.excerpt %>
				<ul>
					<% @sports.last(2).each do |story| %>
						<li><%= link_to story.title, story.to_url %></li>
					<% end %>
				</ul>				
			</div>
		</div>
		
		
	</section>
	<div class="clear"></div>
</div>

