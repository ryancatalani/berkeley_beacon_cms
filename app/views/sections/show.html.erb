<h1><%= @sname %></h1>
<% @articles.each do |article| %>
	<h3><%= article.title %></h3>
	<%= article.excerpt.blank? ? article.body.first(50) : article.excerpt %>
	<%= link_to "link", "/#{article.section.name.downcase}/#{article.updated_at.year}/#{article.updated_at.month}/#{article.updated_at.day}/#{article.title.downcase.gsub(/[^A-z0-9]/,'-')}" %>
<% end %>