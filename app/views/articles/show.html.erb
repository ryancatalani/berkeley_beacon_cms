<div id="article_wrap">
	<h1><%= @article.title %></h1>
	<% if @article.subtitles %>
		<% @article.subtitles.each do |subtitle| %>
			<h2><%= subtitle %></h2>
		<% end %>
	<% end %>
	<h3>By <%= bylineify @article.people %> <br /> <%= (@article.created_at - 5.hours).strftime("%B %e, %Y at %l:%M %P") %></h3>
	
	<% unless @article.mediafiles.empty? %>
		<div id="media">
			<div id="gallery_back_btn"></div>
			<div id="gallery_forward_btn"></div>
			
			<div id="gallery_wrap">
				<% @article.mediafiles.each_with_index do |mediafile,index| %>
					<div class="media_container" <%= "style='display:none'" unless index.zero? %>>
						<div class="media_wrap">
							<% if mediafile.mediatype == 2 %>
								<%= video_tag(@article.mediafiles.first).html_safe %>			
							<% else %>
								<%= image_tag @article.mediafiles.first.media.url %>
							<% end %>
						</div>
						<div id="metadata">
							<div id="caption">
								<%= mediafile.title %>
							</div>
							<div id="credit">
								<%= bylineify mediafile.people %>
							</div>
							<div class="clear"></div>
						</div>
					</div>
				<% end %>
			</div>
		</div>
	<% end %>
	
	<div id="body">
		<%= @article.body.html_safe %>
		<br /><% @article.people.each do |p| %>
			<p><em>
			<%= p.contact_info.html_safe if p.other_designation.blank? %>
			</em></p>
			<% end %>
	</div>
	<div id="sidebar">
		<section id="share">
			<h4>Share this story online</h4>
			<div id="fb">
				<div class="fb-like" data-send="true" data-layout="box_count" data-width="9" data-show-faces="false" data-action="recommend"></div>
			</div>
			<div id="twitter">
				<a href="https://twitter.com/share" class="twitter-share-button" data-count="vertical" data-via="beaconupdate">Tweet</a><script type="text/javascript" src="//platform.twitter.com/widgets.js"></script>
			</div>
			<div id="tumblr">
				<a href="http://www.tumblr.com/share" title="Share on Tumblr" style="display:inline-block; text-indent:-9999px; overflow:hidden; width:61px; height:20px; background:url('http://platform.tumblr.com/v1/share_2.png') top left no-repeat transparent;">Share on Tumblr</a>
			</div>
			<div class="clear"></div>
		</section>
		<section id="popular">
			<h4>Popular on the Beacon</h4>
			<ol>
				<% popular_articles.each do |story| %>
					<div class="popular-story">
						<!-- media -->
						<li>
							<%= link_to image_tag(story.mediafiles.first.media.url, :size=>"40x40"), story.to_url unless story.mediafiles.empty? %>
							<%= link_to truncate(story.title, :length => 60), story.to_url %>
							<div class="clear"></div>
						</li>
					</div>
				<% end %>
			</ol>
		</section>
		
	</div>
	<div class="clear"></div>
</div>