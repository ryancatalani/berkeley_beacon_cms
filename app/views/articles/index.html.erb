<h1>The articles</h1>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th width="150px">Actions</th>
			<th>Title</th>
			<th>Media</th>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article| %>
			<tr>
				<td>
					<%= link_to "<i class='icon-edit'></i> Edit".html_safe, edit_article_url(article), :class => "btn" %>
					<%= link_to "<i class='icon-trash icon-white'></i> Delete".html_safe, article_url(article), :method => :delete, :confirm => "Are you sure you want to delete this article?", :class => "btn btn-danger" %>
				</td>
				<td><%= link_to article.title, article.to_url %></td>
				<td>
					<ul>
					<% article.mediafiles.each do |file| %>
						<li>
							<%= file.title %>
							<div style="width:100px"><%= link_to "<i class='icon-edit'></i>".html_safe, edit_mediafile_url(file), :class => "btn btn-small" %>
							<%= link_to "<i class='icon-trash icon-white'></i>".html_safe, mediafile_url(file), :method => :delete, :confirm => "Are you sure you want to delete this media file from #{article.title}?", :class => "btn btn-danger btn-small" %></div>
						</li>
					<% end %>
					</ul>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>