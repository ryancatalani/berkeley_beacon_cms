<h1>The articles</h1>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th width="150px">Actions</th>
			<th width="50%">Title</th>
			<th>Media</th>
			<th>Set as...</th>
		</tr>
	</thead>
	<tbody>
		<% @articles.each do |article| %>
			<tr>
				<td>
					<%= link_to "<i class='icon-edit'></i> Edit".html_safe, edit_article_url(article), :class => "btn" %>
					<%= link_to "<i class='icon-trash icon-white'></i> Delete".html_safe, article_url(article), :method => :delete, :confirm => "Are you sure you want to delete this article?", :class => "btn btn-danger" %>
				</td>
				<% begin %>
					<td><%= link_to article.title, article.to_url %></td>
				<% rescue %>
					<td><%= article.title %></td>
				<% end %>
				<td>
					<ul>
					<% article.mediafiles.each do |file| %>
						<li>
							<%= file.title %>
							<div style="width:100px">
								<%= link_to "<i class='icon-edit'></i>".html_safe, edit_mediafile_url(file), :class => "btn btn-small", :rel => "tooltip", "data-original-title" => "Edit" %>
								<div rel="tooltip" data-original-title="Delete" style="display:inline">
								<%= link_to "<i class='icon-trash icon-white'></i>".html_safe, mediafile_url(file), :method => :delete, :confirm => "Are you sure you want to delete this media file from #{article.title}?", :class => "btn btn-danger btn-small" %>
								</div>
							</div>
						</li>
					<% end %>
					</ul>
				</td>
				<td>
					<div rel="popover" data-content="The biggest story on the homepage." data-original-title="Lead Story">
						<%= link_to "Lead story", "/new_tag/1/article/#{article.id}", :method => :post, :class => "btn" %>
					</div>
					<div rel="popover" data-content="One of the three stories directly below the lead story on the hompeage." data-original-title="Featured Story">
						<%= link_to "Featured story", "/new_tag/2/article/#{article.id}", :method => :post, :class => "btn" %>
					</div>
					<div rel="popover" data-content="One of the three stories in the strip between the featured stories and the section boxes on the homepage." data-original-title="Middle Strip Story">					
					<%= link_to "Middle strip story", "/new_tag/3/article/#{article.id}", :method => :post, :class => "btn" %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>